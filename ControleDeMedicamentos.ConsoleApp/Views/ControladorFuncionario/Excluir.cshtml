@using ControleDeMedicamentos.ConsoleApp.Model
@model ExcluirFuncionarioViewModel;

@{
    Layout = "_Layout";
    ViewBag.Titulo = "Exclusão de Funcionário";
}

<link href="~/exclusao.css" rel="stylesheet" />

<div class="formulario-exclusao">
    <p>Você tem certeza que deseja excluir o registro "<strong>@Model.Nome</strong>"?</p>

    <div class="botoes-exclusao">
        <form action="/funcionarios/excluir/@Model.Id" method="post">
            <button type="submit" class="btn-confirmar">Confirmar</button>
        </form>
        <a href="/funcionarios/visualizar" class="btn-cancelar">Cancelar</a>
    </div>
</div>